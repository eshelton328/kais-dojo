{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@code/*": ["./*"]
        }
    },
    "include": ["src/**/*", "src/__tests__/**/*"],
    "exclude": ["node_modules"]
}
